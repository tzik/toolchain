#!/bin/bash
source "$(dirname "$0")/package.sh"
cd "${src_dir}"
mkdir -p out/Release
v8_libexec_dir="$(dirname "$(which d8)")/../libexec"

for i in natives_blob.bin snapshot_blob.bin; do
  ln -sf "${v8_libexec_dir}/natives_blob.bin" out/Release
  ln -sf "${v8_libexec_dir}/natives_blob.bin" .
done

./configure --prefix="${prefix}" \
  --ninja \
  --without-bundled-v8 \
  --shared
